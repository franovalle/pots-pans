    <main class="container">
        <div class="row justify-content-center">
            <section class="col-6 mt-5">
                <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el => { %>
                        <div class="alert alert-danger"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <% if (locals.messages.info) { %>
                    <% messages.info.forEach( el => { %>
                        <div class="alert alert-info"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <form action="/signup" method="POST">
                   <div class="mb-3">
                        <label for="userName" class="form-label h4">Enter Company Name</label>
                        <input type="text" class="form-control" id="userName" name="userName">
                      </div>
                    <div class="mb-3">
                      <label for="exampleInputEmail1" class="form-label h4">Email address</label>
                      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                      <div id="emailHelp" class="form-text h3">We'll never share your email with anyone else.</div>
                    </div>
                    <div class="mb-3">
                      <label for="password" class="form-label h4">Password</label>
                      <input type="password" class="form-control h4" id="password" name="password">
                    </div>
                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label h4">Confirm Password</label>
                        <input type="password" class="form-control h4" id="confirmPassword" name="confirmPassword">
                      </div>
                      <div class="mb-3">
                      <label for="role" class="form-label h4">I am a:</label>
                      <select class = "form-select" name="role" id="role">
                      <option value="restaurant">Restaurant</option>
                      <option value ="hospital">Hospital</option>
                      </select>
                    <br></br>
                    <button type="submit" class="btn btn-danger d-block mx-auto">Submit</button>
                  </form>
            </section>
        </div>
    </main>

