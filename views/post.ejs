<%- include('partials/header') -%>
  <span>
    <%= user.userName %>
  </span>
  <div class="container">
    <div class="row justify-content-center mt-5">
      <div class="col-6">
        <span>
          <%= post.item %>
        </span>
        <span>
          <%= post.description %>
        </span>
        <span>
          <%= post.deliveryTime %>
        </span>
        <img class="img-fluid" src="<%= post.image%>" />
        <div class="row justify-content-between">
          <form class="col-1" action="/post/likePost/<%= post.id %>?_method=PUT" method="POST">
            <button class="btn btn-primary fa fa-heart" type="submit"></button>
          </form>
          <h3 class="col-3">Likes: <%= post.likes %>
          </h3>
          <% if (post.user==user.id){ %>
            <form action="/post/deletePost/<%= post.id %>?_method=DELETE" method="POST" class="col-3">
              <button class="btn btn-danger fa fa-trash" type="submit"></button>
            </form>
            <%}%>
            
        </div>
      </div>
      <div class="col-3 mt-5">
      <p><%= post.caption %></p>
    </div>
     <ul>
    <% for(var i=0; i<comments.length; i++) {%>
      <li class="col-6 justify-content-between mt-5">
        <p><%=comments[i].commentText%></p>
        <div class="row justify-content-between">
          <form
            class="col-1"
            action="/comment/likeComment/<%= comments[i]._id %>?_method=PUT"
            method="POST"
          >
            <button class="btn btn-primary fa fa-heart" type="submit"></button>
          </form>
          <h3 class="col-3">Likes: <%= comments[i].likes %></h3>
        </div>
      </li>
    <% } %>
    </ul>
    <form action="/comment/createComment/<%= post.id %>" method="POST">
      <div class="mb-3">
          <label for="title" class="form-label">Comment</label>
          <input type="text" class="form-control" id="title" name="comment">
      </div>
      <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
    </form>
      <div class="col-6 mt-5">
        <a class="btn btn-danger" href="/profile">Return to Profile</a>
        <a class="btn btn-danger" href="/feed">Return to Feed</a>
      </div>
    </div>
  </div>

  <%- include('partials/footer') -%>

